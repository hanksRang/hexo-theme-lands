                                        <span style="color: #38a4ff ; "><%= theme.menu[post.categories.first().name] %></span>&nbsp;&nbsp;
                                    <%} else if(cat == '前沿科技') {%>
                                        <span style="color: #17a2b8; "><%= theme.menu[post.categories.first().name] %></span>&nbsp;&nbsp;
                                    <%} else if(cat == '工具') {%>
                                        <span style="color: #b1dfbb; "><%= theme.menu[post.categories.first().name] %></span>&nbsp;&nbsp;
                                    <%} else if(cat == '百科') {%>
                                        <span style="color: #dca73a; "><%= theme.menu[post.categories.first().name] %></span>&nbsp;&nbsp;
