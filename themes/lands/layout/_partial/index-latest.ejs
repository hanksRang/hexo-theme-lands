<div id="index-latests" style="width: 100%; margin: 0 auto 20px auto; text-align: center; ">
            <div id="latest-slider" class="latest-slider" style="width: 100%; display: flex; ">
                    <!-- Single slider -->
                <div id="index-left-side" style="width: 50%; ">
                    <% site.posts.sort('date', theme.home_page_sort).filter(x => x.categories.first() != undefined)
                            .filter(x => x.developing == undefined)
                            .limit(10).each(function(post){ %>

                        <div class="single-baner-nw2 text-left">
                            <div class="banner-img-cap2" style="text-align: left; ">
                                <div class="" style="width: 100%; ">
                                    <a href="<%- url_for(post.path) %>">
                                        <img src="<%#= post.preCover%>" data-src="<%#= post.cover%>" style="width: 100%; " alt="">
                                    </a>
                                </div>
                                <div class="" style=" width: 100%; text-align: left; ">
                                    <% let cat = theme.menu[post.categories.first().name] %>
                                    <% if (cat == '后端') {%>
                                        <span style="color: #e96900; "><%= theme.menu[post.categories.first().name] %></span>&nbsp;&nbsp;
                                    <%} else if(cat == '前端') {%>
                                            <span style="color: #062c33; "><%= theme.menu[post.categories.first().name] %></span>&nbsp;&nbsp;
