                            </div>
                            <div class="banner-cap2">
                                <p><%= theme.menu[post.categories.first().name] %></p>
                                <h3><a href="<%- url_for(post.path) %>"><%= post.title%></a></h3>
                                <p class="blog-text" style="text-transform: normal !important;">
                                    <a href="<%- url_for(post.path) %>" style="color: #999999; "><%= post.description%></a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
